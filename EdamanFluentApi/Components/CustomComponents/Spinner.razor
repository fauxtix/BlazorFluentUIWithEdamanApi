<!-- Spinner.razor -->
@if (IsVisible)
{
    <div class="spinner-container">
        <div class="spinner">
            <div class="spinner-circle1"></div>
            <div class="spinner-circle2"></div>
            <div class="spinner-circle3"></div>
            <div class="spinner-circle4"></div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; } = false;
}
<style>
    /* Spinner.css */
    .spinner-container {
        position: fixed;
        top: 20%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 1000; /* Ensure it's above other content */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .spinner {
        width: 80px;
        height: 80px;
        position: relative;
    }

    .spinner-circle1,
    .spinner-circle2,
    .spinner-circle3,
    .spinner-circle4 {
        position: absolute;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        border: 8px solid transparent;
    }

    .spinner-circle1 {
        border-top-color: #3498db; /* Change color as needed */
        animation: spin 1.5s linear infinite;
    }

    .spinner-circle2 {
        border-top-color: #2ecc71; /* Change color as needed */
        animation: spin 1.5s linear infinite reverse;
    }

    .spinner-circle3 {
        border-top-color: #e74c3c; /* Change color as needed */
        animation: spin 1.5s linear infinite;
    }

    .spinner-circle4 {
        border-top-color: #f39c12; /* Change color as needed */
        animation: spin 1.5s linear infinite reverse;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }
</style>
